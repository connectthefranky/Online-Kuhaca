
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class='col-md-3'></div>
      <div class="col-md-6">
        <div class="login-box well">
          <form action="">
            <legend>Registracija:</legend>
            <div class="form-group">
              <!--
              <label for="username-email">E-mail ili Korisničko ime</label>
              -->
              <%= f.label :email %>
              <%= f.email_field :email, class: "input form-control", id: "username-email", placeholder: "Upišite vašu e-mail adresu...", autofocus: true %>
              <!--
              <input value='' id="username-email" placeholder="E-mail ili Korisničko ime" type="text" class="form-control" />
              -->
            </div>
            <div class="form-group">
              <!--
              <label for="password">Upišite lozinku</label>
              -->
              <%= f.label :password %>
              <%= f.password_field :password, class: "input form-control" , id:"password", placeholder: "Lozinka", autocomplete: "off" %>
              <!--
              <input id="password" value='' placeholder="Lozinka" type="text" class="form-control" />
              -->
            </div>
            <div class="form-group">
              <!--
              <label for="password">Ponovi lozinku</label>
              -->
              <%= f.label :password_confirmation %>
              <% if @minimum_password_length %>
                  <em>(<!%= @minimum_password_length %> minimalni broj znakova)</em>
              <% end %>
              <%= f.password_field :password_confirmation, class: "input form-control", id:"password", placeholder: "Ponovite vašu lozinku", autocomplete: "off" %>
            </div>
              <div class="register-actions" align="center">
                <div class="actions">
                  <%= f.submit "Registriraj se", class: "btn btn-default btn-block m-t-md" %>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class='col-md-3'></div>
    </div>
  </div>
<% end %>