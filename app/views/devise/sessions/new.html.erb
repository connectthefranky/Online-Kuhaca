<div class="alert">
  <div class="panel panel-default show-panel">

    <a onclick="goBack()" class = "close close-login" data-dismiss="alert">&#215;</a>

    <script>
      function goBack() {
        window.history.back();
      }
    </script>

    <div align="center"><%= image_tag "login.jpg" %></div>

    <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <div class="col-sm-8 col-sm-offset-2">
                <%= f.label :email %><br>
                <%= f.email_field :email, class: "form-control", placeholder: "Upišite svoju e-mail adresu...", autofocus: true %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-8 col-sm-offset-2">
                <%= f.label :password %><br>
                <%= f.password_field :password, class: "form-control", placeholder: "Upišite lozinku", autocomplete: "off" %>
              </div>
            </div>
    </div>

            <div class="login-actions" align="center">
              <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label "Upamti me" %>
                  </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Prijava", class: "btn btn-lg btn-primary" %>
              </div>

              <% end %>

              <%= render "devise/shared/links" %>
            </div>

  </div>
</div>
