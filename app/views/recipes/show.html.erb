<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
	 		<div class="col-md-4">
	 			<%= image_tag @recipe.image.url(:medium) %>
	 			<div class="table-responsive">
	 				<table class="table">
	 				<body>
	 					<tr>
	 						<td><strong>Naslov:</strong></td>
	 						<td><%= @recipe.title %></td>
	 					</tr>
	 					<tr>
	 						<td><strong>Opis:</strong></td>
	 						<td><%= @recipe.description %></td>
	 					</tr>
	 					<tr>
	 						<td><strong>Sastojci:</strong></td>
	 						<td><%= @recipe.ingredients %></td>
	 					</tr>
	 				</body>
	 				</table>

	 				<br></br>
	 				
	 				<% if (Rating.where(:recipe_id => @recipe.id).length == 0) %>
	 					<%= "Dodajte prvu ocjenu" %><br></br>
	 				<% else %>
	 					<%= "Prosječna ocjena: " %><%= @recipe.average_rating %><br></br>
	 				<% end %>


	 				<% if current_user.present? %>
	 					<%= render 'rating_input' %>
	 				<% end %>

	 				<% @comments.each do |c|%>
	 					<%if (c.recipe_id == @recipe.id )%>
						  	<blockquote class="blockquote">
								<p class="mb-0">
									<%= c.user_email.to_s %><%= ": "%>
									<%= c.comment.to_s %>
								</p>
							</blockquote>
							
						<% end %>
					<% end %>   


					<% if current_user.present? %>
						<%= form_for @comment do |f| %>
							<div class="field">
							    <%= f.label :Komentar %><br>
							    <%= f.text_field :comment %>
							    <%= f.hidden_field :recipe_id, :value => @recipe.id %>
							</div>

							<div class="actions">
							    <%= f.submit "Dodaj komentar" %>
							  </div>
						<% end %>
					<% end %>

	 				<% if current_user.present? && current_user.id == @recipe.user_id %>

					<h3><%= link_to 'Uredi', edit_recipe_path(@recipe) %></h3>
					<% end %>
	 			</div>
	 		</div>
	 	</div>
	 </div>		
</div>


